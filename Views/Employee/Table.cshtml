@model List<AdminPanelCoreNitinChandra.Models.EmployeeModel>

@{
    Layout = "~/Views/Shared/_NavAndSidebarLayout.cshtml";
}


@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<p id="myname"> @HttpContextAccessor.HttpContext.Session.GetString("Name1") </p>

<style>
    #tbl {
        padding: 2px;
        padding-top: 60px;
    }
    #myname{
        position: absolute;
        right: 50px;
        top: 20px;
        color: black;
        font-weight: bold;
    }
</style>


<div id="tbl">
    <table class="table table-bordered">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Address</td>
            <td>Age</td>
            <td>Course</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.Age</td>
                <td>@item.Course</td>
                <td> <a asp-action="Edit" asp-controller="Employee" asp-route-Id="@item.Id" class="btn btn-primary">Edit</a></td>
                <td> <a asp-action="Delete" asp-controller="Employee" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>

</div>


<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />