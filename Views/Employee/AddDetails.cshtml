@model AdminPanelCoreNitinChandra.Models.EmployeeModel

@{
    Layout = "~/Views/Shared/_NavAndSidebarLayout.cshtml";
}

<style>
    .clr {
        color: red;
        font-weight: bold;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-sm-4 mx-auto">
            <form asp-action="AddDetails" asp-controller="Employee">
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    <label asp-for="Name">Enter Name:</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="clr"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Enter Email:</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="clr"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Enter Address:</label>
                    <input type="text" asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="clr"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age">Enter Age:</label>
                    <input type="text" asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="clr"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Course">Enter Course:</label>
                    <input type="text" asp-for="Course" class="form-control" />
                    <span asp-validation-for="Course" class="clr"></span>
                </div>

                <input type="submit" value="Add New Details" class="btn btn-block btn-success" />
            </form>
        </div>
    </div>
</div>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>