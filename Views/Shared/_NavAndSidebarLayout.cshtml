<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="shortcut icon" href="img/icons/icon-48x48.png" />

    <link href="~/Admin/css/app.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" href="index.html">
                    <span class="align-middle">Nitin Kumar Chandra</span>
                </a>

                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        Pages
                    </li>

                    <li class="sidebar-item active">
                        <a class="sidebar-link" asp-action="Dashboard" asp-controller="Employee">
                            <i class="align-middle" data-feather="sliders"></i> <span class="align-middle">Dashboard</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-action="Table" asp-controller="Employee">
                            <i class="align-middle" data-feather="user"></i> <span class="align-middle">Employee Table</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-action="AddDetails" asp-controller="Employee">
                            <i class="align-middle" data-feather="user"></i> <span class="align-middle">Add Employee </span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-controller="Employee" asp-action="Ragistration">
                            <i class="align-middle" data-feather="log-in"></i> <span class="align-middle">Ragistration</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-action="Login" asp-controller="Employee">
                            <i class="align-middle" data-feather="user-plus"></i> <span class="align-middle">Login</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-action="Login" asp-controller="Employee">
                            <i class="align-middle" data-feather="user-plus"></i> <span class="align-middle">Log Out</span>
                        </a>
                    </li>

                </ul>

            </div>
        </nav>

        <div class="main">
            @RenderBody()
        </div>



    </div>




</body>

</html>
